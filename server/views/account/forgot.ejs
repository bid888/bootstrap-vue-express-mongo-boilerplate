<% include ../layout %>
<% include ../styles %>

<main>
	<div class="container py-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="card">
					<header class="card-header">
						<h4 class="card-title mt-2">Forgot password</h4>
					</header>
					<article class="card-body">
						<form id="register-form" role="form" autocomplete="off" class="form" method="POST">
							<div class="form-group">
								<label>Email address</label>
								<input type="email" name="email" class="form-control" id="email" required="required">
							</div>
							<div class="form-group">
								<input name="recover-submit" class="btn btn-lg btn-primary btn-block" value="Reset Password" type="submit">
							</div>
							<input type="hidden" class="hide" name="token" id="token" value=""> 
						</form>
						<%if (messages.error) { %> 
							<% messages.error.forEach(function(error) { %>
								<div class="alert alert-danger" role="alert"> <%= error.msg %> </div>
							<% }); %>
						<% } %>
		
						<%if (messages.info) { %> 
							<% messages.info.forEach(function(info) { %>
								<div class="alert alert-info" role="alert"> <%= info.msg %> </div>
							<% }); %>
						<% } %>
					</article>
				</div>
			</div>
		</div>
	</div>
</main>